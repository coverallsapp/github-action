{
  "name": "coveralls-action",
  "version": "1.1.3",
  "private": true,
  "description": "Coveralls Github Action",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "package": "ncc build --source-map --license licenses.txt && cp LICENSE.md dist",
    "test": "mocha -r ts-node/register src/**/*.spec.ts",
    "release": "git checkout releases && git merge master && npm run build && npm run package && git add dist && git commit -a -m 'prepared production release'"
  },
  "author": "Nick Merwin (nick@coveralls.io)",
  "license": "MIT",
  "devDependencies": {
    "@vercel/ncc": "^0.36.0",
    "@types/chai": "^4.1.7",
    "@types/dedent": "^0.7.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^16",
    "@types/request": "^2.48.4",
    "chai": "^4.2.0",
    "dedent": "^0.7.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "sinon": "^15.0.1",
    "source-map-support": "^0.5.13",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@actions/core": "^1.2.6",
    "coveralls": "^3.1.1",
    "request": "^2.88.0"
  }
}
